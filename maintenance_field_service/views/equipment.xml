<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>

        <record id="equipment_maintenance_form_view" model="ir.ui.view">
            <field name="name">equipment_maintenance_form_view</field>
            <field name="model">maintenance.equipments</field>
            <field name="arch" type="xml">
                <form string="Equipment">
                    <sheet>
                        <div class="oe_title">
                            <label for="name"/>
                            <h1>
                                <field name="Name"/>
                            </h1>
                        </div>
                        <group>
                            <group>
                                <field name="partner_id"/>
                            </group>
                            <group>
                                <field name="product_id"/>
                                <field name="last_maintenance"/>
                            </group>
                        </group>

                        <field name="part_ids">
                            <tree>
                                <field name="product_id"/>
                                <field name="qty_time"/>
                                <field name="period_time"/>
                            </tree>
                        </field>

                    </sheet>
                </form>
            </field>
        </record>

        <record id="equipment_maintenance_tree_view" model="ir.ui.view">
            <field name="name">ProjectName.equipment_maintenance.tree</field>
            <field name="model">ProjectName.equipment_maintenance</field>
            <field name="arch" type="xml">
                <tree string="ModelTitle">
                    <field name="create_date"/>
                    <field name="example_field"/>
                </tree>
            </field>
        </record>

        <record id="equipment_maintenance_search_view" model="ir.ui.view">
            <field name="name">ProjectName.equipment_maintenance.search</field>
            <field name="model">ProjectName.equipment_maintenance</field>
            <field name="arch" type="xml">
                <search string="ModelTitle">
                    <group expand="1" string="Group By">
                        <filter string="Example Field" name="example_field" domain="[]"
                                context="{'group_by':'example_field'}"/>
                    </group>
                </search>
            </field>
        </record>

        <record id="equipment_maintenance_act_window" model="ir.actions.act_window">
            <field name="name">ModelTitle</field>
            <field name="type">ir.actions.act_window</field>
            <field name="res_model">ProjectName.equipment_maintenance</field>
            <field name="view_type">form</field>
            <field name="view_mode">tree,form</field>
            <field name="help" type="html">
                <p class="oe_view_nocontent_create">
                    There is no examples click here to add new ModelTitle.
                </p>
            </field>
        </record>

        <menuitem name="ModelTitle" id="equipment_maintenance_menu" parent="your_root_menu" action="equipment_maintenance_act_window"/>

    </data>
</odoo>